<svg id="boundingbox">
  <defs>
    <link rel="import" href="meter_widget.gui" />
  </defs>
  
  <svg id="default">

    <image id="backgroundimage" width="100%" height="100%" opacity="0" href="/private/data/background.jpg" load="sync" x="0" y="0" />
    
    <rect id="stepGoal" x="0%" y="0%" width="0%" height="3%" />
    <rect id="calorieGoal" x="0%" y="3%" width="0%" height="3%" />
    <rect id="floorsGoal" x="0%" y="6%" width="0%" height="3%" />

    <text id="time" class="text large" text-anchor="middle" x="50%" />
    <text id="date" class="text medium" text-anchor="middle" x="50%" />

    <text id="heartRateDate" class="text medium" text-anchor="middle" x="30%" />
    <text id="heartRate" class="text medium heartrate" text-anchor="middle" x="70%" />

    <text id="message" class="text small" text-anchor="middle" x="50%" />
    <textarea id="goalMinutes" class="text very-small" text-anchor="middle" x="5%" width="90%" rows="2" />

    <rect id="activeMinutesGoal" x="0%" y="95%" width="0%" height="3%" />
    <rect id="battery" x="0%" y="98%" width="0%" height="2%" />
    
    <image id="lefttoright" href="Fitbit_app_icon.png" load="sync" x="-50" y="125" height="50" width="50" opacity="0.5" />

    <image id="righttoleft" href="Fitbit_app_icon.png" load="sync" x="120%" y="30%" height="50" width="50" opacity="0.5" />   
    

    <use id="training-meter" href="#meter-blue-icon" x="100%-80" y="0">
      <!-- <set href="#arc" attributeName="sweep-angle" to="290" /> -->
      <set href="#image" attributeName="href" to="img/timer.png" />
    </use>

    <use id="btn-settings" href="#combo-button-upper-left" fill="fb-cyan">
      <set href="combo-button-icon" attributeName="href" to="img/cog.png"/>
      <set href="combo-button-icon-press" attributeName="href" to="img/cog_press.png"/>
    </use>
    
  </svg>
  
  <link rel="import" href="steps.gui" />
  <link rel="import" href="calories.gui" />
  <link rel="import" href="floors.gui" />
  <link rel="import" href="activeminutes.gui" />
  <link rel="import" href="batterylevel.gui" />
  <link rel="import" href="event-confirmation.gui" />
  <link rel="import" href="training.gui" />
  <link rel="import" href="settings.gui" />
  <link rel="stylesheet" href="styles.css" />
</svg>